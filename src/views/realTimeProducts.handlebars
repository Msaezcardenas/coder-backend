<div id='container-products'>

  <form id='form' class='form-product'>

    <div class='container-form'>
      <h2> Crear Producto</h2>
      <div class='form-inputs'>

        <div class='inputs'> 
          <label for='title'>Titulo:</label>
          <input
            type='text'
            id='title'
            name='title'
            required
            placeholder='Titulo'
          />
        </div>

        <div class="inputs">
          <label for='description'>Descripción:</label>
          <input type='text' id='description' name='description' placeholder='Descripción' />
        </div>

        <div class="inputs">
          <label for='code'>Código:</label>
          <input type='text' id='code' name='code' placeholder='Código'/>
        </div>

        <div class="inputs">
          <label for='price'>Precio:</label>
          <input type='number' id='price' name='price' placeholder='Precio'/>
        </div>

        <div class="inputs">
          <label for='status'>Status:</label>
          <input type='bolean' id='status' name='status' />
        </div>

        <div class="inputs">
          <label for='stock'>Stock:</label>
          <input type='number' id='stock' name='stock' placeholder='Stock'/>
        </div>

        <div class="inputs">
          <label for='category'>Categoría:</label>
          <input type='category' id='category' name='category' placeholder='Categoría'/>
        </div>
      
      </div>

      <input type='submit' value='Crear producto' class='btn-submit' />
    </div>
  </form>

  <div id='cards-container' class='cards-container'>
  </div>

  </div>

</div>

